@model SignalRMVCChat.Areas.security.Controllers.ConfirmCodeViewModel
@{
    Layout = null;

}


@using (Html.BeginForm("EmailRequest", "ForgetPassword", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group" style="display:none">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>

    if (TempData["lastSent"] != null)
    {
        <small>آخرین ارسال : @TempData["lastSent"] </small>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="درخواست مجدد  " />
        </div>
    </div>
}

