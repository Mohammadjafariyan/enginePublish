@model TelegramBotsWebApplication.Areas.Admin.Models.MyDataTableResponse<SignalRMVCChat.Models.MyAccount>

@{
    ViewBag.Title = "ادمین های من";
    Layout = "../../Views/Shared/_Layout_Customer.cshtml";
}
<style>
    
th{
    text-align: right !important;
    direction: rtl!important;
}
</style>

<div class="card">
                                                    <div class="card-header">
                                                        <h5>@ViewBag.Title </h5>
                                                    </div>
<div class="card-block">
                                                       


       <p>با تعریف نام کاربری و رمز عبور می توانید به تعداد دلخواه ادمین تعریف کرده و برای پشتیبانی وب سایت خود استفاده نمایید</p>
 <a href="/customer/MyAccounts/Detail?id=0">تعریف ادمین جدید</a>
    
    @if (Model.EntityList!=null && Model.EntityList.Count > 0)
    {
    <table class="table">
        <thead>

        <tr>
            <th>نام و نام خانوادگی</th>
            <th>نام کاربری</th>
            <th>رمز عبور</th>
            <th>دسترسی به وب سایت ها</th>
            <th colspan="3"></th>

        </tr>
        </thead>
        <tbody>
        @foreach (var rec in Model.EntityList)
        {
            <tr>
                <td>@rec.Name</td>
                <td>@rec.Username</td>
                <td>@rec.Password</td>
                <td>

                    <a href="/customer/MyAccounts/AssignWebsites">دسترسی ها</a>
                </td>
                <td><form method="post" action="/Customer/MyAccounts/Delete?id=@rec.Id">
                     
                    <input hidden="hidden" name="Id" value="@rec.Id"/>
                     
                    <button type="submit" class="btn btn-danger">حذف</button>
                </form></td>
                <td>
                    
                    <a href="/customer/MyAccounts/Detail?id=@rec.Id">ویرایش</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    }
    else
    {
        <p>در حال حاضر هیچ ادمینی ثبت نشده است برای شروع یک ادمین <a href="/customer/MyAccounts/Detail?id=0">ایجاد</a> تعریف نمایید</p>
    }
    
</div>
</div>