@model SignalRMVCChat.Models.LoginViewModel

@{
    ViewBag.Title = "ورود به ناحیه کاربری";
}    <style>


.validation {
float: right;
color: red;
    direction: rtl;
}

.validation * {
float: right;
color: red;
}
label{
}
         .login-container{
             margin-top: 5%;
             margin-bottom: 5%;
         }
         .login-form-1{
             padding: 5%;
             box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19);
         }
         .login-form-1 h3{
             text-align: center;
             color: #333;
         }
         .login-form-2{
             padding: 5%;
             background: #0062cc;
             box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19);
         }
         .login-form-2 h3{
             text-align: center;
             color: #fff;
         }
         .login-container form{
             padding: 10%;
         }
         .btnSubmit
         {
             width: 50%;
             border-radius: 1rem;
             padding: 1.5%;
             border: none;
             cursor: pointer;
         }
         .login-form-1 .btnSubmit{
             font-weight: 600;
             color: #fff;
             background-color: #29b3d2;
         }
         .login-form-2 .btnSubmit{
             font-weight: 600;
             color: #0062cc;
             background-color: #fff;
         }
         .login-form-2 .ForgetPwd{
             color: #fff;
             font-weight: 600;
             text-decoration: none;
         }
         .login-form-1 .ForgetPwd{
             color: #29b3d2;
             font-weight: 600;
             text-decoration: none;
         }
 
         input{
             border: #29b3d2 solid 1px !important;
         }
 
         .form-group{
             text-align: right;
         }
         .form-group *{
             text-align: right;
         }
     </style>


<h2>@ViewBag.Title.</h2>
<section class="banner bg-4" id="home">
    <div class="container">
        <div class="row">
            <div class="container login-container">
                <div class="row">
                    <div class="col-md-12 login-form-1">
                        <h3>ورود به سیستم</h3>
                        <p>برای نصب پلاگین مخصوص وب سایت شما ، ابتدا نیاز است وارد شوید</p>
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
                                        @Html.AntiForgeryToken()
                            <div class="validation">
                                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                            </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label >ایمیل</label>
                                        @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                                        @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <label>رمز عبور</label>
                                        @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
                                        @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                                    </div>
                                </div>
                                @*<div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <div class="checkbox">
                                                    @Html.CheckBoxFor(m => m.RememberMe)
                                                                                              <label>مرا به یا</label>
                                                </div>
                                            </div>
                                        </div>*@
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10" style="text-align: center">
                                        <input style="text-align: center" type="submit" class="btnSubmit" value="ورود"/>
                                        <p>عضو نیستید ؟</p>
                                        <p>
                                            @Html.ActionLink("ثبت نام", "Register")
                                        </p> </div>
                                </div>

                                @*<p>
                                            @Html.ActionLink("Forget your password?", "ForgotPassword")
                                        </p>*@
                                }
                            </div>
                </div>
            </div>
        </div>
    </div>
</section>

