@model SignalRMVCChat.Service.HelpDesk.HelpDeskHomeViewModel

@{
    ViewBag.Title = "مرکز پشتیبانی";
    Layout = "../Shared/_HelpDesk_Layout.cshtml";
}


<style>
    .header-color{
        
    }
    
    h4{
    text-align: center;
    margin-top: 20px;
    margin-bottom: 20px;
    }
    
    .acard{
     margin-top: 10px;
        margin-bottom: 10px;
    }
    
    .card {text-align: center;
    
    }
    
    .acard img{
    margin-left: 16%;
    }
</style>

<div >
    
   
    
    <div class="container" style="background-color: #f5f8fb">
        
        <div class="container">
        
            <h4 > <b>
                <i class="fa fa-bookmark" aria-hidden="true"></i>

                مقالات پر بازدید
            </b></h4>
            <div class="row justify-content-md-center">
                <div class="col-md-8">
                    <div class="row justify-content-md-center">
                        @for (int i = 0; i < Model.Articles.Count; i++)
                        {
                            <div class="col-md-4 acard">
                                <div class="card">
                                    <div class="card-body">
                                        <p style="background-color: #f5f8fb" class="card-text">
                                            <a href="/HelpDesk/Article?title=@Model.Articles[i].Title&websiteBaseUrl=@TempData["websiteBaseUrl"]&lang=@TempData["lang"]" style="background-color: #f5f8fb;color: black">
                                                @Model.Articles[i].Title
                                            </a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            
                        }
                    
                    </div>
                </div>

            </div>
           
            <h4><b>
                <i class="fa fa-book" aria-hidden="true"></i>

                گشتن در دسته بندی ها


            </b></h4>
            <div class="row justify-content-md-center">
                <div class="col-md-8">
                    <div class="row justify-content-md-center">
                        @for (int i = 0; i < Model.Categories.Count; i++)
                        {
                            <div class="col-md-4 acard">
                                <div class="card">
                                    
                                        <img class="card-img-top" style="width:  150px"
                                             src="/HelpDesk/CategoryImage?id=@Model.Categories[i].Id" alt="Card image cap">

                                    <div class="card-body">
                                        <a href="/HelpDesk/Detail?categoryTitle=@Model.Categories[i].Title&websiteBaseUrl=@TempData["websiteBaseUrl"]&lang=@TempData["lang"]" class="btn btn-primary">@Model.Categories[i].Title</a>
                                        <p style="margin-top: 11px;" class="card-text">@Model.Categories[i].Description</p>
                                    </div>
                                </div>
                            </div>
                            
                        }
                    
                    
                    </div>
                </div>

            </div>
            
            
            
          

        </div>
              
    </div>
     
</div>







